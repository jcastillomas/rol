<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ApiRol\Context\Character\Domain\Write\Aggregate\Ability" table="ability">
        <id name="id" column="id" type="ability_id" length="64"/>
        <field name="createdAt" column="created_at" type="datetime_immutable" />
        <field name="updatedAt" column="updated_at" type="datetime_immutable" nullable="true" />
        <field name="abilityName" column="name" type="name" length="100" nullable="true"/>
        <field name="abilityDescription" column="description" type="description" length="500" nullable="true"/>
        <field name="abilityLength" column="length" type="ability_length"/>
        <field name="abilityValue" column="value" type="ability_value" length="64"/>
        <field name="abilityValueKind" column="value_kind" length="20" enum-type="ApiRol\Context\Character\Domain\Write\Aggregate\ValueObject\Ability\AbilityValueKind"/>
        <field name="abilityTargetKind" column="target_kind" length="20" enum-type="ApiRol\Context\Character\Domain\Write\Aggregate\ValueObject\Ability\AbilityTargetKind"/>
    </entity>
</doctrine-mapping>
